//Demo.c
#include "Demo.h"

void Demo::setA(int ma)
{
	a = ma;
}

int Demo::getA()
{
	return a;
}

void Demo::setB(int mb)
{
	b = mb;
}

int Demo::getB()
{
	return b;
}


//Demo.h
#pragma once
#include <iostream>
class Demo
{
private:
	int a;
protected:
	int b;
public:
	void setA(int a);
	int getA();
	void setB(int b);
	int getB();
};

